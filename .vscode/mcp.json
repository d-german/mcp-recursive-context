{
  "servers": {
    "recursive-context": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/RecursiveContext.Mcp.Server"
      ],
      "env": {
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "RLM_ROOT_MODEL": "gpt-4.1",
        "RLM_SUB_MODEL": "gpt-4.1-mini",
        "RLM_MAX_ITERATIONS": "50"
      }
    },
     "task-and-research-global": {
      "type": "stdio",
      "command": "mcp-task-and-research",
      "env": {
        "DATA_DIR": ".mcp-tasks",
        "TASK_MANAGER_UI": "true",
        "TASK_MANAGER_UI_AUTO_OPEN": "true",
        "ENABLE_COMPLETION_BEEP": "true"
      }
    },
    "serena": {
      "type": "stdio",
      "command": "C:\\Users\\dgerman\\.local\\bin\\uv.exe",
      "args": [
        "run",
        "--directory",
        "C:\\Users\\dgerman\\AppData\\Local\\uv\\cache\\git-v0\\checkouts\\42910dfe8296368e\\f24073c",
        "serena",
        "start-mcp-server",
        "--context",
        "desktop-app",
        "--mode",
        "interactive",
        "--mode",
        "editing",
        "--mode",
        "planning",
        "--enable-web-dashboard=false",
        "--enable-gui-log-window=false"
      ]
    }
  }
}
